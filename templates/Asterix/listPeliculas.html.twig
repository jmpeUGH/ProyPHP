{% extends 'Asterix/plantilla.html.twig' %}

{%  block contenido %}
        <h2>Películas de Astérix</h2>
    <div class="row row-cols-1 row-cols-md-2">
        {% for pelicula in peliculas %}
            <div class="col mb-4">
                <div class="card" style="width: 20rem;">
                    <img src="{{ pelicula.poster }}" class="card-img-top">
                    <div class="card-body">
                        <h4 class="card-title">{{ pelicula.title }}</h4>
                        
                        <a href="{{ path('pelicula', {'id': pelicula.id}) }}" class="btn btn-primary">Más Info</a>
                        {# {% if is_granted("ROLE_ADMIN")%} #}
                        <a href="{{ path('editPelicula', {'id': pelicula.id}) }}" class="btn 
                        btn-primary">Editar</a>
                        {# {% endif %} #}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}