{% extends 'Asterix/plantilla.html.twig' %}

{%  block contenido %}
    <div style="justify-content: center">
        <h2>Personajes de Astérix</h2>
        <div class="row row-cols-1 row-cols-md-2 row-cols-md-3">
            {% for personaje in personajes %}
                <div class="col mb-4">
                    <div class="card" style="width: 18rem;">
                        <img src="{{ personaje.image }}" class="card-img-top">
                        <div class="card-body">
                            <h4 class="card-title">{{ personaje.name }}</h4>
                            <h6 class="card-text">{{ personaje.role }}</h6>
                            <a href="{{ path('personaje', {'id': personaje.id}) }}" class="btn btn-primary">Más Info</a>
                            {# {% if is_granted("ROLE_ADMIN")%} #}
                            <a href="{{ path('editPersonaje', {'id': personaje.id}) }}" class="btn 
                            btn-primary">Editar</a>
                            {# {% endif %} #}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}